<?xml version='1.0' encoding='utf-8'?>
<widget id="com.totalWebConnections.SimpleWorkPlanner" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Work Planner</name>
    <description>
        Simple task to do list with dates for getting more work done.
    </description>
    <author email="info@totalwebconnections.com" href="http://www.totalwebconnections.com">
        Total Web Connections
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="deployment-target" value="11.0" />
        <preference name="SwiftVersion" value="5.3" />
    </platform>
    <icon density="mdpi" height="1024" platform="ios" src="res/icon/ios/icon.png" width="1024" />
    <icon density="mdpi" height="120" platform="ios" src="res/icon/ios/Icon-60@2x.png" width="120" />
